@model UserViewModel

<form method="post" asp-action="Create">

  <div class="field">
    <label class="label" asp-for="Username"></label>
    <div class="control has-icons-left has-icons-right">
      <input class="input" asp-for="Username">
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-check"></i>
      </span>
      <span class="help is-danger required">*</span>
      <span class="help is-danger invalid">invalid</span>

    </div>
  </div>
  
  <div class="field">
    <label class="label" asp-for="Email"></label>
    <div class="control has-icons-left">
      <input class="input" asp-for="Email">
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
      <span class="help is-danger required">*</span>
      <span class="help is-danger invalid">invalid</span>
    </div>
  </div>
  
  <div class="field">
    <label class="label" asp-for="Gender"></label>
    <div class="control has-icons-left">
    
      @foreach (var gender in Enum.GetValues(typeof(UserViewModel.GenderType)))
      {
        <input asp-for="Gender" type="radio" value="@gender" required> @gender<br>
      }
      <span class="help is-danger required">*</span>
    </div>
    
  </div>
  
  <div class="field">
    <label class="label" asp-for="DateOfBirth"></label>
    <div class="control">
      <input class="input" asp-for="DateOfBirth">
      <span class="help is-danger required">*</span>
      <span class="help is-danger invalid">invalid</span>
    </div>
  </div>
  
  <div class="field">
    <label class="label" asp-for="Password"></label>
    <div class="control">
      <input class="input" asp-for="Password">
      <span class="help is-danger required">*</span>
      <span class="help is-danger invalid">invalid</span>
    </div>
  </div>

  <div class="field">
    <label class="label" asp-for="PasswordCompare"></label>
    <div class="control">
      <input class="input" asp-for="PasswordCompare">
      <span class="help is-danger required">*</span>
      <span class="help is-danger invalid">invalid</span>
    </div>
  </div>
  
  <div class="field">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
  </div>

</form>

@section Scripts {
  <partial name="_ValidationScripts" />
}