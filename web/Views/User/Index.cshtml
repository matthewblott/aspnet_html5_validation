@model UserViewModel

<style>

    /* required */
  input[required]:placeholder-shown ~ span.required {
    display: inline-block;
  }

  input[required]:not(:placeholder-shown) ~ span.required {
    display: none;
  }

  input:read-only ~ span.required {
    display: none !important;
  }

  /* invalid */
  input:invalid:placeholder-shown ~ span.invalid {
    display: none;
  }
  
  input:valid:not(:placeholder-shown) ~ span.invalid {
    display: none;
  }

  input:read-only ~ span.invalid {
    display: none;
  }

</style>

<form method="post" asp-action="Create">

  <div class="field">
    <label class="label" asp-for="Username"></label>
    <div class="control has-icons-left has-icons-right">
      <input class="input" asp-for="Username">
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-check"></i>
      </span>
      <span class="help is-danger required">*</span>
      <span class="help is-danger invalid">invalid</span>

    </div>
  </div>

  <div class="field">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
  </div>

</form>

<script>
    
  document.querySelectorAll('input,textarea,select').forEach((el) =>
    el.addEventListener('invalid', (e) => e.preventDefault(), true));
  
</script>